@model CustomerViewModel
@{
    ViewData["Title"] = "Delete Customer";
}
<div>
    <h2>Are you sure you want to delete this customer?</h2>
    <p>
        <strong>Full Name:</strong> @Model.FullName<br />
        <strong>Email:</strong> @Model.EmailAddress<br />
        <strong>Gender:</strong> @Model.Gender<br />
        <strong>Birthdate:</strong> @Model.Birthdate.ToShortDateString()<br />
        <strong>Mobile:</strong> @Model.PhoneNumber<br />
        <strong>Permanent Address:</strong> @Model.PermanentAddress<br />
    </p>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>